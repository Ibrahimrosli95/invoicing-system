APP_NAME="Sales System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Development Database Configuration
# Edit these values to match your preferences
LOCAL_DB_PORT=3306
LOCAL_DB_NAME=sales_system_dev
LOCAL_DB_USER=laravel_user
LOCAL_DB_PASS=secret123

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=${LOCAL_DB_PORT}
DB_DATABASE=${LOCAL_DB_NAME}
DB_USERNAME=${LOCAL_DB_USER}
DB_PASSWORD=${LOCAL_DB_PASS}
# Leave SSL CA empty to avoid SSL requirement issues in development
MYSQL_ATTR_SSL_CA=

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_STORE=file
CACHE_PREFIX=

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Development Tools
DEBUGBAR_ENABLED=true
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Application Features
BROWSERSHOT_BIN=/usr/local/bin/chromium
BROWSERSHOT_TIMEOUT=60
WEBHOOK_RETRY_COUNT=3
WEBHOOK_TIMEOUT=5
QUOTATION_PREFIX=QTN
INVOICE_PREFIX=INV
RESET_NUMBERS_YEARLY=true

VITE_APP_NAME="${APP_NAME}"